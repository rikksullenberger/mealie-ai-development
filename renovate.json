{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "pep621",
    "dockerfile",
    "npm"
  ],
  "extends": [
    "config:recommended"
  ],
  "addLabels": [
    "dependencies"
  ],
  "ignoreDeps": [
    "python"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "matchManagers": [
        "pep621"
      ],
      "rangeStrategy": "pin"
    }
  ]
}
